 {
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "jsx": "react",
    "isolatedModules": false,
    "lib": [
      "DOM",
      "ES5",
      "ES6"
    ],
    "removeComments": true,
    "noLib": false,
    "noEmitHelpers": true,
    "preserveConstEnums": true,
    "suppressImplicitAnyIndexErrors": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "outDir": "dist/",
    "declaration": true,
    "sourceMap": true
  },
  "include": [
    "src/**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}